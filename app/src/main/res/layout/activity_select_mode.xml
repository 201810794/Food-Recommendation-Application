<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SelectMode">

    <Button
        android:id="@+id/select_menu"
        android:layout_width="212dp"
        android:layout_height="112dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/whitegrey"
        android:onClick="select_menu"
        android:text="직접 메뉴 선택"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_feeling"
        android:layout_width="212dp"
        android:layout_height="112dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/whitegrey"
        android:onClick="select_feeling"
        android:text="현재 감정에 따른\n메뉴 선택"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_menu" />

    <Button
        android:id="@+id/testpage"
        android:layout_width="128dp"
        android:layout_height="86dp"
        android:backgroundTint="@color/whitegrey"
        android:onClick="testpage"
        android:background="#00ff0000"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>